<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">






    <ProgressBar
        android:layout_marginTop="75dp"
        android:indeterminateDrawable="@drawable/custom_progressbar"
        android:layout_gravity="center"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ppsignin"
        android:visibility="gone"/>

    <LinearLayout
        android:layout_marginTop="130dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/signuplls"
        android:orientation="vertical">

        <TextView
            android:textStyle="bold"
            android:layout_marginRight="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:text="Welcome Back!!"
            android:textSize="20sp"
            android:textColor="@color/color_darkgreen"/>



        <EditText
        android:textColor="#000"
        android:layout_margin="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:id="@+id/emsignin"/>


    <EditText
        android:textColor="#000"
        android:layout_margin="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="password"
        android:inputType="textPassword"
        android:id="@+id/passignin"/>



    <android.support.v7.widget.CardView
        app:cardCornerRadius="10dp"
        android:id="@+id/clicksignin"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        app:cardBackgroundColor="@color/color_darkgreen"
        android:layout_width="285dp"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:src="@drawable/ddo"
                android:layout_width="40dp"
                android:layout_height="40dp" />

            <TextView
                android:layout_marginLeft="8dp"
                android:textStyle="bold"
                android:textSize="18sp"
                android:padding="5dp"
                android:textColor="#ffff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Log In!"/>

        </LinearLayout>

    </android.support.v7.widget.CardView>



    <TextView
        android:textStyle="italic"
        android:textSize="16sp"
        android:textColor="@color/color_darkgreen"
        android:layout_gravity="center"
        android:layout_margin="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/forgotsignin"
        android:text="Forgot Pssword"/>

    </LinearLayout>

</LinearLayout>