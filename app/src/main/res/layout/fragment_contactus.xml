<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:background="@drawable/csds"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.ContactusFragment"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:layout_marginTop="80dp"
        android:padding="9dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/mailll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <android.support.v7.widget.CardView
                app:cardCornerRadius="8dp"
                app:cardElevation="6dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">



                <LinearLayout
                    android:padding="9dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:fontFamily="cursive"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Do Contact Us!!"
                        android:textSize="35sp"
                        android:layout_gravity="center"
                        android:textColor="@color/colorAccent"
                        android:textStyle="bold"/>

                    <TextView
                        android:gravity="center"
                        android:textColor="#000"
                        android:layout_marginTop="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="fill out the form below and a representative will contact you"
                        android:textSize="15sp"
                        android:layout_gravity="center"
                        />
                    <EditText
                        android:textColorHint="#000"
                        android:layout_gravity="center"
                        android:layout_marginTop="9dp"
                        android:id="@+id/editText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:hint="Email adress"
                        android:inputType="textEmailAddress"
                        />

                    <EditText
                        android:textColorHint="#000"
                        android:layout_gravity="center"
                        android:layout_marginTop="7dp"
                        android:id="@+id/ename"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Name"
                        />

                    <EditText
                        android:textColorHint="#000"
                        android:layout_gravity="center"
                        android:layout_marginTop="7dp"
                        android:id="@+id/phoneno"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Phone number"
                        android:inputType="number"
                        />

                    <EditText
                        android:textColorHint="#000"
                        android:layout_gravity="center"
                        android:layout_marginTop="9dp"
                        android:id="@+id/editText2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:hint="Kindly Write your Message Here"
                        android:inputType="textMultiLine"
                        />


                    <android.support.v7.widget.CardView
                        android:id="@+id/button"
                        android:layout_marginTop="27dp"
                        android:layout_gravity="center"
                        app:cardBackgroundColor="@color/colorAccent"
                        android:layout_width="285dp"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <ImageView
                                android:src="@drawable/ddo"
                                android:layout_width="40dp"
                                android:layout_height="40dp" />

                            <TextView
                                android:textStyle="bold"
                                android:textSize="18sp"
                                android:padding="5dp"
                                android:textColor="#ffff"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Email Us"/>

                        </LinearLayout>

                    </android.support.v7.widget.CardView>



                </LinearLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </ScrollView>

</LinearLayout>